                @Html.TextBox("CodeMail", null, new { style = "margin-top: 30px;color: black;" });

                <h3>Nhập mật khẩu mới</h3>
                @Html.TextBox("pass", null, new { style = "margin-top: 30px;color: black;" });


                <input type="submit" value="Gửi">

            }


        </div>
    </div>

</body>

</html>
