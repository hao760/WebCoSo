
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xác nhận</title>
    <link href="~/reset_password/style.css" rel="stylesheet" />
</head>
<body>
    <div class="elelment">
