@model List<WebApplication1.Models.HoaDon>
@{

    Layout = "~/Views/Shared/_LayoutSanPham.cshtml";
}

<h2>Lịch sử mua</h2>
<link href="~/assest/min.css" rel="stylesheet" />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Mã hóa đơn</th>
            <th scope="col">Ngày mua</th>
            <th scope="col">Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.MaHoaDon</th>
                <td>@item.NgayBan</td>
                <td>@String.Format("{0:0,0}", @item.TongTien)</td>
            </tr>

        }
        
       
    </tbody>
</table>





