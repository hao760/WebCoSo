                var masp = btn.data('id');
                var quanlity = document.querySelector("p.soLuong");
               // var model = {};
               // model.masp = masp;
               
                $.ajax({
                    type: "POST",
                    url: "/GioHang/Themvaogio",//Controller
                    data: { masp: masp },//model,//JSON.stringify(model),//
                    contentType: "application/x-www-form-urlencoded;charset=UTF-8", //   "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        btn.parent().remove();
                        //btn.style.display = "none";
                        quanlity.innerText = '('+ data.soLuong +')';
                        alert(data.Message);
                       
                    },
                    error: function() {
                        alert("Error occured!!");
                    }
                });
            });
